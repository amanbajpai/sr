<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:buttonStyle">@style/Button</item>
    </style>

    <!-- Task List Styles -->
    <style name="TaskListTitle" parent="@android:style/Widget.TextView" >
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_tasktitle</item>
        <item name="android:textColor">@color/tasklisttitle</item>
    </style>

    <style name="TaskListDescription" parent="@android:style/Widget.TextView" >
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_taskdescription</item>
        <item name="android:textColor">@color/tasklistdescription</item>
    </style>

    <style name="Button" parent="android:Widget.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

</resources>
