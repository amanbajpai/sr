<resources >
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="android:actionBarStyle" >@style/ActionBar</item >
        <item name="actionBarStyle" >@style/ActionBar</item >
        <item name="android:buttonStyle" >@style/Button</item >
        <item name="android:buttonStyleToggle" >@style/Toggle</item >
        <item name="android:editTextStyle" >@style/EditText</item >
        <item name="android:checkboxStyle" >@style/CheckBox</item >
        <item name="android:spinnerStyle" >@style/Spinner</item >
        <!--<item name="android:background">@color/white</item>-->
    </style >

    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse" >
        <item name="android:background" >@drawable/action_bar</item >
        <item name="background" >@drawable/action_bar</item >
    </style >

    <style name="FragmentTheme" >
        <item name="android:background" >@color/white</item >
    </style >

    <style name="DialogTheme" >
        <item name="android:background" >@drawable/dialog_bg</item >
    </style >

    <style name="MapWindowTheme" >
        <item name="android:background" >@drawable/map_info_bubble</item >
    </style >

    <style name="EditText" parent="android:Widget.EditText" >
        <item name="android:minHeight" >48dp</item >
        <item name="android:paddingLeft" >10dp</item >
        <item name="android:paddingRight" >10dp</item >
        <item name="android:background" >@drawable/edit_text</item >
    </style >

    <style name="MaleRadioButton" parent="android:Widget.CompoundButton.RadioButton" >
        <item name="android:minWidth" >48dp</item >
        <item name="android:button" >@drawable/radio_button_male_normal_selector</item >
    </style >

    <style name="FemaleRadioButton" parent="android:Widget.CompoundButton.RadioButton" >
        <item name="android:minWidth" >48dp</item >
        <item name="android:button" >@drawable/radio_button_female_normal_selector</item >
    </style >

    <style name="CheckBox" parent="android:Widget.CompoundButton.CheckBox" >
        <item name="android:button" >@drawable/check_box</item >
        <item name="android:textColor" >@color/grey</item >
        <!-- <item name="android:childIndicatorLeft">20dp</item> -->
    </style >

    <style name="Spinner" parent="android:Widget.Spinner" >
        <item name="android:background" >@drawable/spinner_selector</item >
        <item name="android:textColor" >@color/grey</item >
        <!--<item name="android:spinnerMode" >dropdown</item >-->
    </style >

    <style name="Toggle" parent="android:Widget.Button.Toggle" >
        <item name="android:background" >@drawable/btn_toggle</item >
        <item name="android:minHeight" >28dip</item >
        <item name="android:textOff" ></item >
        <item name="android:textOn" ></item >
    </style >
    <!-- MAP - Task POPUP Styles -->
    <style name="MapTaskTitle" parent="@android:style/Widget.TextView" >
        <item name="android:textStyle" >bold</item >
        <item name="android:textSize" >@dimen/text_size_medium</item >
        <item name="android:textColor" >@color/black</item >
    </style >

    <style name="MapTaskLabel" parent="@android:style/Widget.TextView" >
        <item name="android:textStyle" >normal</item >
        <item name="android:textSize" >@dimen/text_size_small</item >
        <item name="android:textColor" >@color/grey</item >
    </style >

    <style name="MapTaskValue" parent="@android:style/Widget.TextView" >
        <item name="android:textStyle" >bold</item >
        <item name="android:textSize" >@dimen/text_size_small</item >
        <item name="android:textColor" >@color/black</item >
    </style >
    <!-- Task List Styles -->
    <style name="TaskListTitle" parent="@android:style/Widget.TextView" >
        <item name="android:textStyle" >bold</item >
        <item name="android:textSize" >@dimen/text_size_medium</item >
        <item name="android:textColor" >@color/black</item >
    </style >

    <style name="TaskListDescription" parent="@android:style/Widget.TextView" >
        <item name="android:textStyle" >normal</item >
        <item name="android:textSize" >@dimen/text_size_small</item >
        <item name="android:textColor" >@color/grey</item >
    </style >

    <style name="TaskListTime" parent="@android:style/Widget.TextView" >
        <item name="android:textStyle" >normal</item >
        <item name="android:textSize" >@dimen/text_size_small</item >
        <item name="android:textColor" >@color/red</item >
    </style >

    <style name="TaskListDate" parent="@android:style/Widget.TextView" >
        <item name="android:textStyle" >bold</item >
        <item name="android:textSize" >@dimen/text_size_small</item >
        <item name="android:textColor" >@color/grey</item >
    </style >

    <style name="SurveyListTitle" parent="@android:style/Widget.TextView" >
        <item name="android:textStyle" >bold</item >
        <item name="android:textSize" >@dimen/text_size_medium</item >
        <item name="android:textColor" >@color/black</item >
    </style >

    <style name="SurveyListDescription" parent="@android:style/Widget.TextView" >
        <item name="android:textStyle" >normal</item >
        <item name="android:textSize" >@dimen/text_size_small</item >
        <item name="android:textColor" >@color/grey</item >
    </style >

    <style name="SurveyListTime" parent="@android:style/Widget.TextView" >
        <item name="android:textStyle" >normal</item >
        <item name="android:textSize" >@dimen/text_size_small</item >
        <item name="android:textColor" >@color/red</item >
    </style >

    <style name="SurveyListDate" parent="@android:style/Widget.TextView" >
        <item name="android:textStyle" >bold</item >
        <item name="android:textSize" >@dimen/text_size_small</item >
        <item name="android:textColor" >@color/grey</item >
    </style >

    <style name="Button" parent="android:Widget.Button" >
        <item name="android:minHeight" >48dp</item >
        <item name="android:minWidth" >64dp</item >
        <item name="android:paddingLeft" >2dp</item >
        <item name="android:paddingRight" >2dp</item >
        <item name="android:paddingTop" >10dp</item >
        <item name="android:paddingBottom" >10dp</item >
        <item name="android:gravity" >center</item >
        <item name="android:textColor" >@color/white</item >
        <item name="android:textStyle" >bold</item >
        <item name="android:textSize" >@dimen/text_size_medium</item >
    </style >

    <style name="profileSectionTextStyle" >
        <item name="android:textColor" >@color/black</item >
        <item name="android:textSize" >@dimen/text_size_medium</item >
        <item name="android:paddingTop" >10dp</item >
        <item name="android:paddingLeft" >5dp</item >
        <item name="android:paddingRight" >5dp</item >
        <item name="android:paddingBottom" >5dp</item >
    </style >

    <style name="profileSectionDividerStyle" >
        <item name="android:background" >@color/black</item >
    </style >

    <style name="mainMenuDividerStyle" >
        <item name="android:background" >@color/grey</item >
    </style >

    <style name="DialogTitle" parent="@android:style/Widget.TextView" >
        <item name="android:textSize" >@dimen/text_size_large</item >
        <item name="android:textColor" >@color/black</item >
    </style >

    <style name="DialogText" parent="@android:style/Widget.TextView" >
        <item name="android:textSize" >@dimen/text_size_medium</item >
        <item name="android:textColor" >@color/black</item >
    </style >

    <style name="QuestionText" parent="@android:style/Widget.TextView" >
        <item name="android:textSize" >@dimen/text_size_medium</item >
        <item name="android:textColor" >@color/black</item >
    </style >

    <style name="QuestionConditionText" parent="@android:style/Widget.TextView" >
        <item name="android:textSize" >@dimen/text_size_medium</item >
        <item name="android:textColor" >@color/grey</item >
        <item name="android:textStyle" >italic</item >
    </style >

    <style name="QuestionValidationComment" parent="@android:style/Widget.TextView" >
        <item name="android:textSize" >@dimen/text_size_medium</item >
        <item name="android:textColor" >@color/red</item >
        <item name="android:textStyle" >normal</item >
        <item name="android:visibility" >gone</item >
    </style >
</resources >
