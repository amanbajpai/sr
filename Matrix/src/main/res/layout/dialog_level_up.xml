<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/CustomDialog"
    android:orientation="vertical" >
    <com.ros.smartrocket.ui.views.CustomTextView
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:drawableStart="@drawable/badge_icon"
        android:drawablePadding="20dp"
        style="@style/DialogTitle"
        android:text="@string/congratulations"
        android:background="@color/red"
        custom:textStyle="bold" />
    <ImageView
        android:id="@+id/levelIcon"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:contentDescription="@string/app_name"
        android:layout_margin="30dp"
        android:adjustViewBounds="true" />
    <com.ros.smartrocket.ui.views.CustomTextView
        android:id="@+id/rankDescription"
        style="@style/DialogText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/you_have_been_promoted" />
    <com.ros.smartrocket.ui.views.CustomTextView
        android:id="@+id/levelDescription"
        style="@style/DialogText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="20dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />
    <com.ros.smartrocket.ui.views.CustomTextView
        android:id="@+id/okButton"
        style="@style/DialogButton"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="5dp"
        android:textColor="@color/red"
        android:text="@string/you_have_been_promoted_ok"
        custom:textStyle="bold" />
</LinearLayout >