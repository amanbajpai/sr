<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.ros.smartrocket.views.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/or"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16sp"
        custom:textStyle="bold" />

    <com.ros.smartrocket.views.CustomButton
        android:id="@+id/google_sign_in_btn"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_orange_selector"
        android:drawableLeft="@drawable/share_icon_fb"
        android:drawablePadding="10dp"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:text="@string/continue_with_google"
        custom:textStyle="bold" />

    <com.ros.smartrocket.views.CustomButton
        android:id="@+id/fb_login_btn"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_fb_selector"
        android:drawableLeft="@drawable/share_icon_fb"
        android:drawablePadding="10dp"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:text="@string/continue_with_fb"
        custom:textStyle="bold" />
</LinearLayout>