<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">

    <com.ros.smartrocket.views.CustomTextView
        android:id="@+id/questionText"
        style="@style/QuestionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <com.ros.smartrocket.views.CustomTextView
        android:id="@+id/presetValidationComment"
        style="@style/QuestionValidationComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp" />

    <com.ros.smartrocket.views.CustomTextView
        android:id="@+id/validationComment"
        style="@style/QuestionValidationComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp" />
    <!--<com.ros.smartrocket.views.CustomTextView
        android:id="@+id/conditionText"
        style="@style/QuestionConditionText"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:text="@string/take_photo_big"
        custom:textStyle="bold" />-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_light">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/camera_icon"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/rePhotoButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="top|left"
            android:layout_margin="10dp"
            android:background="@drawable/btn_square_active"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:src="@drawable/refresh_square_red"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/confirmButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="top|right"
            android:layout_margin="10dp"
            android:background="@drawable/btn_square_active"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:src="@drawable/check_square_green"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>