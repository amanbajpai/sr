<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.QuestionNumberFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/headerQuestion6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_question_header_with_condition"/>
    <com.ros.smartrocket.views.CustomTextView
        android:id="@+id/answerTextView"
        style="@style/EditText"
        android:background="@drawable/field"
        android:textSize="@dimen/text_size_15sp"
        android:hint="@string/enter_here"
        android:singleLine="true"
        android:layout_below="@id/headerQuestion6"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        android:layout_alignParentBottom="true"
        layout="@layout/include_keyboard"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
</RelativeLayout>