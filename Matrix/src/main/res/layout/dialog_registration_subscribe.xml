<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/CustomDialog"
    android:orientation="vertical" >
    <com.ros.smartrocket.ui.views.CustomTextView
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:text="@string/registration_subscribe_dialog_title"
        android:drawableStart="@drawable/confirm_icon"
        android:drawablePadding="20dp"
        style="@style/DialogTitle"
        android:background="@color/green"
        custom:textStyle="bold" />
    <com.ros.smartrocket.ui.views.CustomTextView
        style="@style/DialogText"
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/registration_subscribe_dialog_text1" />
    <com.ros.smartrocket.ui.views.CustomTextView
        style="@style/DialogText"
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_margin="20dp"
        android:text="@string/registration_subscribe_dialog_text2" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />
    <com.ros.smartrocket.ui.views.CustomTextView
        android:id="@+id/okButton"
        style="@style/DialogButton"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:textColor="@color/green"
        android:layout_weight="1"
        custom:textStyle="bold"
        android:text="@string/ok" />
</LinearLayout >