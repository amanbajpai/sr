<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ProgressBar
        android:id="@+id/mainProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp" />
    <FrameLayout
        android:id="@+id/contentLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" />
    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@color/black_transparence"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="invisible" >
        <com.ros.smartrocket.views.CustomButton
            android:id="@+id/previousButton"
            style="@style/Button"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/button_green_selector"
            android:text="@string/previous"
            android:drawableLeft="@drawable/up_icon"
            android:visibility="invisible"
            android:layout_marginRight="5dp"
            custom:textStyle="bold" />
        <com.ros.smartrocket.views.CustomButton
            android:id="@+id/nextButton"
            style="@style/Button"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/button_green_selector"
            android:text="@string/next"
            android:drawableRight="@drawable/up_icon"
            android:layout_marginLeft="5dp"
            android:visibility="invisible"
            custom:textStyle="bold" />
        <com.ros.smartrocket.views.CustomButton
            android:id="@+id/validationButton"
            style="@style/Button"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/button_green_selector"
            android:text="@string/validate"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            custom:textStyle="bold" />
    </LinearLayout >
</LinearLayout >