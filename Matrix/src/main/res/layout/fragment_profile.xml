<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp" >
            <TextView
                style="@style/profileSectionTextStyle"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/app_name" />
            <View
                style="@style/profileSectionDividerStyle"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1" >
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/balance" />
                    <TextView
                        android:id="@+id/balance"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/balance_0" />
                </LinearLayout >
                <Button
                    android:id="@+id/transferFundsButton"
                    style="@style/Button"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="@string/transfer_funds" />
            </LinearLayout >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/registered_account" />
                <EditText
                    android:id="@+id/payPalEditText"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/pay_pal" />
            </LinearLayout >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >
                <View
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/changeAccountInfoButton"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_toRightOf="@+id/profilePhotoImageView"
                    android:layout_below="@+id/passwordEditText"
                    android:text="@string/change_account_info" />
            </LinearLayout >
            <TextView
                style="@style/profileSectionTextStyle"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/your_info" />
            <View
                style="@style/profileSectionDividerStyle"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp" />
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent" >
                <ImageView
                    android:id="@+id/profilePhotoImageView"
                    android:layout_height="120dp"
                    android:layout_width="100dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_launcher" />
                <EditText
                    android:id="@+id/fullNameEditText"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@+id/profilePhotoImageView"
                    android:hint="@string/full_name" />
                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@+id/profilePhotoImageView"
                    android:layout_below="@+id/fullNameEditText"
                    android:hint="@string/password" />
                <TextView
                    android:id="@+id/changePasswordButton"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/profilePhotoImageView"
                    android:layout_below="@+id/passwordEditText"
                    android:text="@string/change_password" />
            </RelativeLayout >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/gender" />
            </LinearLayout >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/birthday" />
                <EditText
                    android:id="@+id/dayEditText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:hint="@string/day" />
                <EditText
                    android:id="@+id/monthEditText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:hint="@string/month" />
                <EditText
                    android:id="@+id/yearEditText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:hint="@string/year" />
            </LinearLayout >
            <EditText
                android:id="@+id/emailEditText"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:hint="@string/your_email_hint" />
            <EditText
                android:id="@+id/countryEditText"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:hint="@string/your_country_hint" />
            <EditText
                android:id="@+id/cityEditText"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:hint="@string/your_city_hint" />
            <Button
                android:id="@+id/updateMyLocationButton"
                style="@style/Button"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:text="@string/update_my_location" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
                <Button
                    android:id="@+id/confirmAndSaveButton"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/confirm_and_save" />
                <Button
                    android:id="@+id/cancelButton"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_weight="2"
                    android:text="@string/cancel" />
            </LinearLayout >
        </LinearLayout >
    </ScrollView >
</LinearLayout >