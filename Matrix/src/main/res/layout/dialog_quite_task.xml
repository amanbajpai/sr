<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/CustomDialog"
    android:orientation="vertical" >
    <com.ros.smartrocket.views.CustomTextView
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:text="@string/quite_task_dialog_title"
        android:drawableStart="@drawable/quit_icon"
        android:drawablePadding="20dp"
        style="@style/DialogTitle"
        android:background="@color/green"
        custom:textStyle="bold" />
    <com.ros.smartrocket.views.CustomTextView
        style="@style/DialogText"
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_margin="20dp"
        android:text="@string/quite_task_dialog_text1" />
    <com.ros.smartrocket.views.CustomTextView
        style="@style/DialogText"
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/quite_task_dialog_text2" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
        <com.ros.smartrocket.views.CustomTextView
            android:id="@+id/cancelButton"
            style="@style/DialogButton"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:textColor="@color/red"
            android:text="@string/quite_mission_cancel"
            custom:textStyle="bold" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey" />
        <com.ros.smartrocket.views.CustomTextView
            android:id="@+id/quiteTaskButton"
            style="@style/DialogButton"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:textColor="@color/green"
            android:layout_weight="1"
            android:text="@string/quite_mission"
            custom:textStyle="bold" />
    </LinearLayout >
</LinearLayout >