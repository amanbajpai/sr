<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_transparency"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/buttons_margin"
        android:layout_margin="@dimen/buttons_margin"
        android:background="@color/white"
        android:orientation="vertical">
        <ScrollView
            android:id="@+id/massAuditSubquestionsScroll"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:id="@+id/massAuditSubquestionsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <com.ros.smartrocket.views.CustomTextView
                    android:id="@+id/massAuditSubQuestionsLabel"
                    style="@style/QuestionText"
                    android:text="@string/category"
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.ros.smartrocket.views.CustomTextView
                    android:id="@+id/massAuditSubQuestionsTitle"
                    style="@style/QuestionText"
                    android:layout_alignBaseline="@id/massAuditSubQuestionsLabel"
                    tools:text="Mass Audit"
                    android:layout_toEndOf="@id/massAuditSubQuestionsLabel"
                    android:textSize="16sp"
                    android:layout_marginStart="@dimen/buttons_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.ros.smartrocket.views.CustomTextView
                    android:id="@+id/massAuditSubQuestionsSubtitleLabel"
                    style="@style/QuestionText"
                    android:text="@string/product"
                    android:paddingTop="5dp"
                    android:layout_below="@id/massAuditSubQuestionsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.ros.smartrocket.views.CustomTextView
                    android:id="@+id/massAuditSubQuestionsSubtitle"
                    style="@style/QuestionText"
                    android:layout_toEndOf="@id/massAuditSubQuestionsSubtitleLabel"
                    android:layout_below="@id/massAuditSubQuestionsTitle"
                    android:layout_alignBaseline="@id/massAuditSubQuestionsSubtitleLabel"
                    android:layout_alignStart="@id/massAuditSubQuestionsTitle"
                    android:textSize="16sp"
                    tools:text="Please mark..."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginTop="5dp"
                    android:background="@color/separator_grey"
                    android:layout_below="@id/massAuditSubQuestionsSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </RelativeLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/bottomSubQuestionsButtons"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <com.ros.smartrocket.views.CustomButton
                android:id="@+id/cancelSubQuestionsButton"
                style="@style/Button"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="@drawable/button_green_stroke_selector"
                android:text="@string/cancel_big"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                custom:textStyle="bold"/>
            <com.ros.smartrocket.views.CustomButton
                android:id="@+id/submitSubQuestionsButton"
                style="@style/Button"
                android:enabled="false"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="@drawable/button_green_selector"
                android:text="@string/submit"
                custom:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
