<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black_transparency"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/buttons_margin"
        android:layout_margin="@dimen/buttons_margin"
        android:background="@color/white"
        android:orientation="vertical">
        <com.ros.smartrocket.views.CustomTextView
            android:id="@+id/massAuditSubQuestionsTitle"
            style="@style/QuestionText"
            tools:text="Mass Audit"
            android:textSize="16sp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.ros.smartrocket.views.CustomTextView
            android:id="@+id/massAuditSubQuestionsSubtitle"
            style="@style/QuestionText"
            tools:text="Please mark..."
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:paddingTop="5dp"
            android:background="@color/separator_grey"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <ListView
            android:id="@+id/massAuditSubquestionsListView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
    </LinearLayout>
</FrameLayout>
