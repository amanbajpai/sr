<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="25dp" >
    <ScrollView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1" >
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical" >
            <LinearLayout
                android:id="@+id/closingQuestionTextLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical" >
                <com.ros.smartrocket.ui.views.CustomTextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_size_12sp"
                    android:textColor="@color/grey"
                    android:text="@string/validation_big"
                    custom:textStyle="bold" />
                <View
                    android:layout_height="1px"
                    android:layout_width="match_parent"
                    android:background="@color/black" />
                <com.ros.smartrocket.ui.views.CustomTextView
                    android:id="@+id/closingQuestionText"
                    style="@style/QuestionText"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:lineSpacingExtra="5dp"
                    android:layout_marginTop="15dp" />
            </LinearLayout >
            <com.ros.smartrocket.ui.views.CustomButton
                android:id="@+id/recheckTaskButton"
                style="@style/Button"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_green_selector"
                android:text="@string/recheck_my_answer"
                custom:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/grey_light"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:paddingTop="25dp"
                android:paddingBottom="25dp" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <com.ros.smartrocket.ui.views.CustomTextView
                        android:layout_height="wrap_content"
                        android:layout_width="155dp"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/grey"
                        android:text="@string/mission_due"
                        android:layout_marginEnd="5dp"
                        custom:textStyle="bold" />
                    <com.ros.smartrocket.ui.views.CustomTextView
                        android:id="@+id/missionDueTextView"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/black"
                        custom:textStyle="bold" />
                </LinearLayout >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <com.ros.smartrocket.ui.views.CustomTextView
                        android:layout_height="wrap_content"
                        android:layout_width="155dp"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/grey"
                        android:text="@string/task_data_size"
                        android:layout_marginEnd="5dp"
                        custom:textStyle="bold" />
                    <com.ros.smartrocket.ui.views.CustomTextView
                        android:id="@+id/taskDataSizeTextView"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/black"
                        custom:textStyle="bold" />
                </LinearLayout >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <com.ros.smartrocket.ui.views.CustomTextView
                        android:layout_height="wrap_content"
                        android:layout_width="155dp"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/grey"
                        android:text="@string/due_in"
                        android:layout_marginEnd="5dp"
                        custom:textStyle="bold" />
                    <com.ros.smartrocket.ui.views.CustomTextView
                        android:id="@+id/dueInTextView"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/black"
                        custom:textStyle="bold" />
                </LinearLayout >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <com.ros.smartrocket.ui.views.CustomTextView
                        android:layout_height="wrap_content"
                        android:layout_width="155dp"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/grey"
                        android:text="@string/task_id"
                        android:layout_marginEnd="5dp"
                        android:textAllCaps="true"
                        custom:textStyle="bold" />
                    <com.ros.smartrocket.ui.views.CustomTextView
                        android:id="@+id/taskIdTextView"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/black"
                        custom:textStyle="bold" />
                </LinearLayout >
            </LinearLayout >
            <com.ros.smartrocket.ui.views.CustomTextView
                style="@style/QuestionText"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:lineSpacingExtra="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="@string/confirm_you_can_find_in_my_mission" />
        </LinearLayout >
    </ScrollView >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@color/black_transparency"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <com.ros.smartrocket.ui.views.CustomButton
            android:id="@+id/sendNowButton"
            style="@style/Button"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:background="@drawable/button_green_selector"
            android:text="@string/submit_now"
            android:layout_marginEnd="5dp"
            custom:textStyle="bold" />
        <com.ros.smartrocket.ui.views.CustomButton
            android:id="@+id/sendLaterButton"
            style="@style/Button"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:background="@drawable/button_green_selector"
            android:text="@string/submit_later"
            android:layout_marginStart="5dp"
            custom:textStyle="bold" />
    </LinearLayout >
</LinearLayout >