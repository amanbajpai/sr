<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/logo"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="15dp"
            android:contentDescription="@string/app_name"
            android:adjustViewBounds="true"
            android:src="@drawable/logo_color" />
        <com.ros.smartrocket.views.CustomTextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_18sp"
            android:text="@string/tell_your_friends_about"
            custom:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grey_light"
            android:padding="10dp" >
            <com.ros.smartrocket.views.CustomButton
                android:id="@+id/emailButton"
                style="@style/ShareButton"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/button_green_selector"
                android:text="@string/share_via_email"
                android:drawableLeft="@drawable/share_icon_mail"
                custom:textStyle="bold" />
            <com.ros.smartrocket.views.CustomButton
                android:id="@+id/facebookButton"
                style="@style/ShareButton"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/button_fb_selector"
                android:text="@string/share_via_facebook"
                android:drawableLeft="@drawable/share_icon_fb"
                custom:textStyle="bold" />
            <com.ros.smartrocket.views.CustomButton
                android:id="@+id/linkedindButton"
                style="@style/ShareButton"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/button_linked_selector"
                android:text="@string/share_via_linkedin"
                android:drawableLeft="@drawable/share_icon_linked"
                custom:textStyle="bold" />
            <com.ros.smartrocket.views.CustomButton
                android:id="@+id/messageButton"
                style="@style/ShareButton"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/button_green_selector"
                android:text="@string/share_via_message"
                android:drawableLeft="@drawable/share_icon_message"
                custom:textStyle="bold" />
            <com.ros.smartrocket.views.CustomButton
                android:id="@+id/sinaWeiboButton"
                style="@style/ShareButton"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/button_sina_selector"
                android:text="@string/share_via_sina_weibo"
                android:drawableLeft="@drawable/share_icon_sina"
                custom:textStyle="bold" />
            <com.ros.smartrocket.views.CustomButton
                android:id="@+id/tencentWeiboButton"
                style="@style/ShareButton"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/button_tencent_selector"
                android:text="@string/share_via_tencent_weibo"
                android:drawableLeft="@drawable/share_icon_tencent"
                custom:textStyle="bold" />
            <com.ros.smartrocket.views.CustomButton
                android:id="@+id/twitterButton"
                style="@style/ShareButton"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/button_twitter_selector"
                android:text="@string/share_via_twitter"
                android:drawableLeft="@drawable/share_icon_twitter"
                custom:textStyle="bold" />
            <com.ros.smartrocket.views.CustomButton
                android:id="@+id/wechatButton"
                style="@style/ShareButton"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/button_wechat_selector"
                android:text="@string/share_via_wechat"
                android:drawableLeft="@drawable/share_icon_wechat"
                custom:textStyle="bold" />
            <com.ros.smartrocket.views.CustomButton
                android:id="@+id/whatsappButton"
                style="@style/ShareButton"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/button_whats_selector"
                android:text="@string/share_via_whatsapp"
                android:drawableLeft="@drawable/share_icon_whats"
                custom:textStyle="bold" />
            <com.ros.smartrocket.views.CustomButton
                android:id="@+id/qzoneButton"
                style="@style/ShareButton"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/button_qzone_selector"
                android:text="@string/share_via_qzone"
                android:drawableLeft="@drawable/share_icon_qzone"
                custom:textStyle="bold" />
        </LinearLayout >
    </LinearLayout >
</ScrollView >