<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp" >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/share_and_refer_via" />
        <Button
            android:id="@+id/emailButton"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="@string/share_and_refer_via_email" />
        <Button
            android:id="@+id/messageButton"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="@string/share_and_refer_via_message" />
        <Button
            android:id="@+id/twitterButton"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="@string/share_and_refer_via_twitter" />
        <Button
            android:id="@+id/facebookButton"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="@string/share_and_refer_via_facebook" />
        <Button
            android:id="@+id/linkedindButton"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="@string/share_and_refer_via_linkedin" />
        <Button
            android:id="@+id/whatsappButton"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="@string/share_and_refer_via_whatsapp" />
        <Button
            android:id="@+id/wechatButton"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="@string/share_and_refer_via_wechat" />
        <Button
            android:id="@+id/tencentWeiboButton"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="@string/share_and_refer_via_tencent_weibo" />
        <Button
            android:id="@+id/sinaWeiboButton"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="@string/share_and_refer_via_sina_weibo" />
        <Button
            android:id="@+id/qzoneButton"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="@string/share_and_refer_via_qzone" />
    </LinearLayout >
</ScrollView >