<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="28dp"
    android:paddingTop="2dp"
    android:orientation="horizontal">

    <com.ros.smartrocket.ui.views.CustomTextView
        android:id="@+id/optionsRowPrice"
        style="@style/TaskAndWaveOptionStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:textStyle="bold" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <com.ros.smartrocket.ui.views.CustomTextView
        android:id="@+id/optionsRowExp"
        style="@style/TaskAndWaveOptionStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:textStyle="bold" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <com.ros.smartrocket.ui.views.CustomTextView
        android:id="@+id/optionsRowLocations"
        style="@style/TaskAndWaveOptionStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        custom:textStyle="bold" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <com.ros.smartrocket.ui.views.CustomTextView
        android:id="@+id/optionsRowDuration"
        style="@style/TaskAndWaveOptionStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:textStyle="bold" />
</LinearLayout>