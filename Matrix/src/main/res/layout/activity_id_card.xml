<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="com.ros.smartrocket.activity.IdCardActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:columnCount="2">
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingRight="16dp"
                app:layout_column="0"
                app:layout_row="0"
                app:layout_gravity="fill"
                app:layout_columnWeight="1"
                app:layout_rowSpan="2">
                <ImageView
                    android:id="@+id/idCardUserPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:src="@drawable/city_icon"/>
                <com.ros.smartrocket.views.CustomTextView
                    android:id="@+id/idCardAgentName"
                    tools:text="Christy Fung"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_13p6sp"
                    custom:textStyle="bold"/>
                <com.ros.smartrocket.views.CustomTextView
                    android:id="@+id/idCardAgentId"
                    tools:text="ID: 577"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_13p6sp"
                    custom:textStyle="bold"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/idCardLogo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="16dp"
                tools:src="@drawable/badge"
                app:layout_column="1"
                app:layout_row="0"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="2"/>
            <ImageView
                android:src="@drawable/sr_mono_red"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_column="1"
                app:layout_row="1"
                app:layout_gravity="fill"
                app:layout_rowWeight="1"
                app:layout_columnWeight="2"/>
        </android.support.v7.widget.GridLayout>
        <com.ros.smartrocket.views.CustomTextView
            android:id="@+id/idCardText"
            tools:text="Some text"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_13p6sp"/>
    </LinearLayout>
</ScrollView>
