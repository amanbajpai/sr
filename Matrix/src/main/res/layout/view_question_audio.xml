<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:waveview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/btnRecordPause"
            android:layout_width="@dimen/audi_button_size"
            android:layout_height="@dimen/audi_button_size"
            waveview:srcCompat="@drawable/avd_record" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/btnStop"
            android:layout_width="@dimen/audi_button_size"
            android:layout_height="@dimen/audi_button_size"
            android:visibility="gone"
            waveview:srcCompat="@drawable/avd_stop" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/btnPlayStop"
            android:layout_width="@dimen/audi_button_size"
            android:layout_height="@dimen/audi_button_size"
            android:visibility="gone"
            waveview:srcCompat="@drawable/avd_play" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/btnTrash"
            android:layout_width="@dimen/audi_button_size"
            android:layout_height="@dimen/audi_button_size"
            android:visibility="gone"
            waveview:srcCompat="@drawable/avd_trash" />

</merge>