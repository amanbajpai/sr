<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <com.ros.smartrocket.views.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:lineSpacingExtra="5dp"
        android:padding="20dp"
        android:text="@string/national_id_header"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14sp"
        custom:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="@color/grey_light"
            android:padding="14dp"
            android:src="@drawable/user_icon_gray" />

        <com.ros.smartrocket.views.CustomEditTextView
            android:id="@+id/nameEdt"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="@string/hint_your_registered_alipay_acc_name"
            android:inputType="textPersonName"
            android:textSize="@dimen/text_size_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="@color/grey_light"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/mail_icon" />

        <com.ros.smartrocket.views.CustomEditTextView
            android:id="@+id/userNationalIdEdt"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="@string/national_id_number_hint"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/text_size_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="@color/grey_light"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/mail_icon" />

        <com.ros.smartrocket.views.CustomEditTextView
            android:id="@+id/phoneEdt"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="@string/phone_number_hint"
            android:inputType="phone"
            android:textSize="@dimen/text_size_14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.ros.smartrocket.views.CustomButton
        android:id="@+id/submitButton"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_green_selector"
        android:text="@string/submit"
        custom:textStyle="bold" />

</LinearLayout>