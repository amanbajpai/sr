<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <com.ros.smartrocket.views.CustomTextView
        android:id="@+id/questionText"
        style="@style/QuestionText"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp" />
    <com.ros.smartrocket.views.CustomTextView
        android:id="@+id/validationComment"
        style="@style/QuestionValidationComment"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingBottom="20dp" />
    <com.ros.smartrocket.views.CustomTextView
        android:id="@+id/conditionText"
        style="@style/QuestionConditionText"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:text="@string/take_video_big"
        custom:textStyle="bold" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <VideoView
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:adjustViewBounds="true"
            android:visibility="invisible"
            android:layout_gravity="top|center_horizontal" />
        <ImageButton
            android:id="@+id/rePhotoButton"
            android:layout_gravity="top|left"
            android:padding="10dp"
            android:src="@drawable/refresh_square_red"
            android:contentDescription="@string/app_name"
            android:layout_width="42dp"
            android:background="@drawable/btn_square_active"
            android:layout_margin="10dp"
            android:layout_height="42dp"
            android:visibility="gone" />
        <ImageButton
            android:id="@+id/confirmButton"
            android:src="@drawable/check_square_green"
            android:contentDescription="@string/app_name"
            android:layout_width="42dp"
            android:background="@drawable/btn_square_active"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_gravity="top|right"
            android:layout_height="42dp"
            android:visibility="gone" />
    </FrameLayout >
</LinearLayout >