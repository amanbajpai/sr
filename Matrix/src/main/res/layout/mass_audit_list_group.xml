<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/massAuditGroupBg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mass_audit_grey"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.ros.smartrocket.ui.views.CustomTextView
        android:id="@+id/massAuditGroupTitle"
        style="@style/QuestionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/mass_audit_grey"
        android:paddingBottom="8dp"
        android:paddingStart="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingTop="8dp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        tools:text="Wrigley's Doublemint chewing gum" />

    <ImageView
        android:id="@+id/massAuditCatImageThumb"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true" />
</LinearLayout>