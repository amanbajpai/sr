<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:clickable="false"
        android:focusable="false" />

    <com.ros.smartrocket.ui.views.CustomTextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_15sp"
        custom:textStyle="bold" />

    <com.ros.smartrocket.ui.views.CustomEditTextView
        android:id="@+id/otherAnswerEditText"
        style="@style/EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:hint="@string/please_write_in"
        android:lines="1"
        android:maxLines="1"
        android:minHeight="40dp"
        android:textColorHint="@color/grey_middle"
        android:textSize="@dimen/text_size_15sp"
        android:visibility="gone"
        custom:textStyle="bold" />
</LinearLayout>