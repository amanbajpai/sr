<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <com.ros.smartrocket.views.CustomTextView
        android:id="@+id/emptyListLTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:gravity="center"
        android:text="@string/no_mission_available"
        custom:textStyle="bold"
        android:lineSpacingExtra="3dp"
        android:background="@color/grey_middle"
        android:layout_weight="1"
        android:textColor="@color/grey_dark" />
    <ListView
        android:id="@+id/waveList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:background="@color/grey_middle"
        tools:listitem="@layout/list_item_wave" />
    <LinearLayout
        android:id="@+id/showHideMissionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black_transparence"
        android:visibility="gone">
        <com.ros.smartrocket.views.CustomButton
            android:id="@+id/showHideMissionButton"
            style="@style/Button"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/button_green_selector"
            android:text="@string/show_hidden_projects"
            android:layout_margin="15dp"
            custom:textStyle="bold" />
    </LinearLayout >
</LinearLayout >