<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp" >
        <ImageView
            android:id="@+id/logo"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="45dp"
            android:layout_width="wrap_content"
            android:contentDescription="@string/app_name"
            android:adjustViewBounds="true"
            android:src="@drawable/logo_white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:contentDescription="@string/app_name"
                android:adjustViewBounds="true"
                android:background="@color/grey_light"
                android:padding="14dp"
                android:src="@drawable/mail_icon" />
            <com.ros.smartrocket.views.CustomEditTextView
                android:id="@+id/emailEditText"
                style="@style/EditText"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="textEmailAddress"
                android:background="@color/white"
                android:hint="@string/your_email_hint" />
        </LinearLayout >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:contentDescription="@string/app_name"
                android:adjustViewBounds="true"
                android:background="@color/grey_light"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:src="@drawable/pass_icon" />
            <com.ros.smartrocket.views.CustomEditTextView
                android:id="@+id/passwordEditText"
                style="@style/EditText"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:background="@color/white"
                android:hint="@string/your_password_hint" />
        </LinearLayout >
        <com.ros.smartrocket.views.CustomCheckBox
            android:id="@+id/rememberMeCheckBox"
            style="@style/CheckBox"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:paddingStart="15dp"
            android:textColor="@color/orange"
            android:layout_marginTop="20dp"
            android:text="@string/remember_me" />
        <com.ros.smartrocket.views.CustomButton
            android:id="@+id/loginButton"
            style="@style/Button"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/button_green_selector"
            android:layout_marginTop="20dp"
            android:text="@string/login_big"
            custom:textStyle="bold" />
        <com.ros.smartrocket.views.CustomTextView
            android:id="@+id/forgotPasswordButton"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:textColor="@color/orange"
            android:text="@string/forgot_your_password"
            android:textSize="@dimen/text_size_14sp"
            custom:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <com.ros.smartrocket.views.CustomButton
            android:id="@+id/registerButton"
            style="@style/Button"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/button_orange_selector"
            android:layout_marginTop="10dp"
            android:text="@string/i_new_user"
            custom:textStyle="bold" />
    </LinearLayout >
</ScrollView >