<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/listItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/mission_green_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.ros.smartrocket.views.CustomTextView
                    android:id="@+id/name"
                    style="@style/TaskListTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:drawableRight="@drawable/arrow_grey_big"
                    android:singleLine="true"
                    custom:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/timeAndDistanceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.ros.smartrocket.views.CustomTextView
                        android:id="@+id/timeLeft"
                        style="@style/TaskListTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/sandclock_grey"
                        android:drawablePadding="3dp"
                        custom:textStyle="bold" />

                    <com.ros.smartrocket.views.CustomTextView
                        android:id="@+id/distance"
                        style="@style/TaskListDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:drawableLeft="@drawable/human_grey"
                        android:drawablePadding="3dp"
                        custom:textStyle="bold" />
                </LinearLayout>

                <com.ros.smartrocket.views.CustomTextView
                    android:id="@+id/missionAvaileble"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/text_size_13p6sp"
                    custom:textStyle="bold" />

                <com.ros.smartrocket.views.CustomTextView
                    android:id="@+id/locationName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_13p6sp"
                    custom:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <com.ros.smartrocket.views.CustomTextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="@dimen/text_size_13p6sp"
            custom:textStyle="bold" />

        <LinearLayout
            android:id="@+id/optionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_light"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp">

            <com.ros.smartrocket.views.CustomTextView
                android:id="@+id/taskPrice"
                style="@style/TaskAndWaveOptionStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/wallet_green"
                custom:textStyle="bold" />

            <com.ros.smartrocket.views.CustomTextView
                android:id="@+id/taskExp"
                style="@style/TaskAndWaveOptionStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:drawableLeft="@drawable/rocket_green"
                custom:textStyle="bold" />

            <View
                android:id="@+id/optionDivider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:background="@color/green_dark" />

            <com.ros.smartrocket.views.CustomTextView
                android:id="@+id/textQuestionsCount"
                style="@style/TaskAndWaveOptionStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:drawableLeft="@drawable/quote_green"
                custom:textStyle="bold" />

            <com.ros.smartrocket.views.CustomTextView
                android:id="@+id/photoQuestionsCount"
                style="@style/TaskAndWaveOptionStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:drawableLeft="@drawable/camera_green"
                custom:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>