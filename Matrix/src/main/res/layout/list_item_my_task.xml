<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/popup_green"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical" >
            <ImageView
                android:id="@+id/image"
                android:contentDescription="@string/app_name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/project_type_2_popup" />
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical" >
                <com.ros.smartrocket.views.CustomTextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    style="@style/TaskListTitle"
                    custom:textStyle="bold" />
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal" >
                    <com.ros.smartrocket.views.CustomTextView
                        android:id="@+id/timeLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TaskListTime"
                        android:drawableLeft="@drawable/human_green"
                        android:layout_marginLeft="5dp" />
                    <com.ros.smartrocket.views.CustomTextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        style="@style/TaskListDate"
                        android:drawableLeft="@drawable/human_green" />
                </LinearLayout >
            </LinearLayout >
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/arrow_grey" />
        </LinearLayout >
        <LinearLayout
            android:id="@+id/defaultStatusLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/grey_light"
            android:padding="5dp"
            android:orientation="horizontal" >
            <com.ros.smartrocket.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_expires_at"
                android:textColor="@color/grey"/>
            <com.ros.smartrocket.views.CustomTextView
                android:id="@+id/expiresTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TaskListTime"
                android:layout_marginLeft="5dp"
                android:textColor="@color/grey"/>
        </LinearLayout >
        <LinearLayout
            android:id="@+id/reDuStatusLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/red_light"
            android:padding="5dp"
            android:orientation="horizontal" >
            <com.ros.smartrocket.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/redo_mission_till"
                android:textColor="@color/red"/>
            <com.ros.smartrocket.views.CustomTextView
                android:id="@+id/redoTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TaskListTime"
                android:layout_marginLeft="5dp"
                android:textColor="@color/red"/>
        </LinearLayout >
        <LinearLayout
            android:id="@+id/pendingStatusLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/blue_light"
            android:padding="5dp"
            android:orientation="horizontal" >
            <com.ros.smartrocket.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pending"
                android:textColor="@color/blue"/>
        </LinearLayout >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_light"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal" >
            <com.ros.smartrocket.views.CustomTextView
                android:id="@+id/price"
                style="@style/TaskAndSurveyOptionStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/wallet_green"
                custom:textStyle="bold" />
            <com.ros.smartrocket.views.CustomTextView
                android:id="@+id/exp"
                style="@style/TaskAndSurveyOptionStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/rocket_green"
                custom:textStyle="bold" />
        </LinearLayout >
    </LinearLayout >
    <LinearLayout
        android:id="@+id/validationStatusLayout"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:gravity="top|right"
        android:orientation="horizontal"
        android:background="@color/white_transparence"
        android:visibility="gone" >
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_large"
            android:text="@string/task_on_validation_status" />
    </LinearLayout >
    <LinearLayout
        android:id="@+id/scheduledStatusLayout"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:gravity="top|right"
        android:orientation="horizontal"
        android:visibility="gone" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/scheduled" />
    </LinearLayout >
    <LinearLayout
        android:id="@+id/completedStatusLayout"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:gravity="top|right"
        android:orientation="horizontal"
        android:background="@color/white_transparence"
        android:visibility="gone" >
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_large"
            android:text="@string/task_completed_status" />
    </LinearLayout >
    <LinearLayout
        android:id="@+id/claimedStatusLayout"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:gravity="top|right"
        android:orientation="horizontal"
        android:background="@color/white_transparence"
        android:visibility="gone" >
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_large"
            android:text="@string/task_claimed_status" />
    </LinearLayout >
    <LinearLayout
        android:id="@+id/startedStatusLayout"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:gravity="top|right"
        android:orientation="horizontal"
        android:background="@color/white_transparence"
        android:visibility="gone" >
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_large"
            android:text="@string/task_started_status" />
    </LinearLayout >
    <LinearLayout
        android:id="@+id/validatedStatusLayout"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:gravity="top|right"
        android:orientation="horizontal"
        android:background="@color/white_transparence"
        android:visibility="gone" >
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_large"
            android:text="@string/task_validated_status" />
    </LinearLayout >
</LinearLayout >