<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    style="@style/CustomDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.ros.smartrocket.ui.views.CustomTextView
        style="@style/DialogTitle"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:background="@color/green"
        android:drawableStart="@drawable/confirm_icon"
        android:drawablePadding="20dp"
        android:text="@string/check_location_dialog_title"
        custom:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/statusImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/round_progress" />

        <com.ros.smartrocket.ui.views.CustomTextView
            android:id="@+id/statusText"
            style="@style/DialogText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="start"
            android:text="@string/check_location_dialog_text1" />
    </LinearLayout>
</LinearLayout>