<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ros.smartrocket"
    android:installLocation="auto"
    android:versionCode="2"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Global receiver -->
    <permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- Cloud to Device Messaging permissions -->
    <permission
        android:name="com.ros.smartrocket.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.ros.smartrocket.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- Map -->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!-- App must have this permission to use the library -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- Crach loger -->
    <uses-permission android:name="android.permission.READ_LOGS" />
    <!-- Get Photo -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="com.ros.smartrocket.App"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.LaunchActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter >
        </activity >
        <activity
            android:name="com.ros.smartrocket.activity.ReferralCasesActivity"
            android:configChanges="locale"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.ros.smartrocket.activity.EnterGroupCodeActivity"
            android:configChanges="locale"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.ros.smartrocket.activity.RegistrationActivity"
            android:configChanges="locale"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.ros.smartrocket.activity.LoginActivity"
            android:configChanges="locale"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.ros.smartrocket.activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name="com.ros.smartrocket.activity.TaskDetailsActivity"
            android:theme="@style/AppThemeGreen"
            android:configChanges="locale" />
        <activity
            android:name="com.ros.smartrocket.activity.SurveyDetailsActivity"
            android:configChanges="locale" />
        <activity
            android:name="com.ros.smartrocket.activity.MapActivity"
            android:theme="@style/AppThemeGreen"
            android:configChanges="locale"
            android:launchMode="singleTop"
            android:parentActivityName="com.ros.smartrocket.activity.MainActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ros.smartrocket.activity.MainActivity" />
        </activity >
        <activity
            android:name="com.ros.smartrocket.activity.CheckLocationActivity"
            android:configChanges="locale" />
        <activity
            android:name="com.ros.smartrocket.activity.CheckLocationFailedActivity"
            android:configChanges="locale" />
        <activity
            android:name="com.ros.smartrocket.activity.QuestionsActivity"
            android:theme="@style/AppThemeGreen"
            android:configChanges="locale"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.ros.smartrocket.activity.TaskValidationActivity"
            android:configChanges="locale" />
        <activity
            android:name="com.ros.smartrocket.activity.TermsAndConditionActivity"
            android:configChanges="locale" />
        <activity
            android:name="com.ros.smartrocket.activity.QuitQuestionActivity"
            android:configChanges="locale" />

        <service
            android:name="com.ros.smartrocket.net.NetworkService"
            android:exported="false" />
        <provider
            android:name="com.ros.smartrocket.db.AppContentProvider"
            android:authorities="com.ros.smartrocket"
            android:exported="false" />
        <!-- Used for install referral measurement -->
        <service android:name="com.google.analytics.tracking.android.CampaignTrackingService" />
        <receiver
            android:name="com.google.analytics.tracking.android.CampaignTrackingReceiver"
            android:exported="false" >
            <intent-filter >
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter >
        </receiver >
        <!-- GCM -->
        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter >
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.ros.smartrocket" />
            </intent-filter >
        </receiver >
        <receiver
            android:name="com.ros.smartrocket.net.GlobalReceiver"
            android:exported="true" >
            <intent-filter android:priority="1000" >
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter >
        </receiver >

        <service android:name="com.ros.smartrocket.GCMIntentService" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDbenpp_65I1QGBbF8wJK8blokzFYKKhwI" />
        <!-- Upload file services -->
        <service
            android:name="com.ros.smartrocket.net.UploadFileService"
            android:exported="false" />
        <service
            android:name="com.ros.smartrocket.net.UploadFileNetworkService"
            android:exported="false" />
    </application >
</manifest >
