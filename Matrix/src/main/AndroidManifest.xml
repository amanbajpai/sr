<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ros.smartrocket"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Baidu -->
    <uses-permission android:name="android.permission.BAIDU_LOCATION_SERVICE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <!-- Global receiver -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- Cloud to Device Messaging permissions -->
    <uses-permission android:name="${applicationId}.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- Map -->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!-- App must have this permission to use the library -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- Crach loger -->
    <uses-permission android:name="android.permission.READ_LOGS" />
    <!-- Get Photo -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <!-- Custom notification -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme"
        tools:replace="allowBackup, label">
        <activity
            android:name=".activity.LaunchActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ReferralCasesActivity"
            android:configChanges="locale"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.RegistrationActivity"
            android:configChanges="locale"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.LoginActivity"
            android:configChanges="locale"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.ForgotPasswordActivity"
            android:configChanges="locale"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.ForgotPasswordSuccessActivity"
            android:configChanges="locale" />
        <activity
            android:name=".activity.FullScreenImageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.FullScreenVideoActivity"
            android:configChanges="orientation" />
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TaskDetailsActivity"
            android:configChanges="locale|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeGreen" />
        <activity
            android:name=".activity.WaveDetailsActivity"
            android:configChanges="locale"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeGreen" />
        <activity
            android:name=".activity.NotificationActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|locale"
            android:theme="@style/CustomNotification.Theme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.MapActivity"
            android:configChanges="locale"
            android:launchMode="singleTop"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppThemeGreen">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.SettingsActivity"
            android:configChanges="locale" />
        <activity
            android:name=".activity.ShareActivity"
            android:configChanges="locale" />
        <activity
            android:name=".activity.CheckLocationActivity"
            android:configChanges="locale" />
        <activity
            android:name=".activity.EmailRedirectActivity"
            android:configChanges="locale">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!--<data android:host="www.youtube.com" android:scheme="http"></data>-->
                <data
                    android:host="smart-rocket.com"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CheckLocationFailedActivity"
            android:configChanges="locale" />
        <activity
            android:name=".activity.ActivateAccountActivity"
            android:configChanges="locale" />
        <activity
            android:name=".activity.SetNewPasswordActivity"
            android:configChanges="locale" />
        <activity
            android:name=".activity.QuestionsActivity"
            android:configChanges="locale|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeGreen"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.TaskValidationActivity"
            android:configChanges="locale"
            android:theme="@style/AppThemeGreen" />
        <activity
            android:name=".activity.TermsAndConditionActivity"
            android:configChanges="locale" />
        <activity
            android:name=".activity.QuitQuestionActivity"
            android:configChanges="locale" />
        <activity
            android:name=".activity.CashingOutActivity"
            android:configChanges="locale" />
        <activity
            android:name=".activity.CashingOutConfirmationActivity"
            android:configChanges="locale" />
        <activity
            android:name=".activity.CashingOutSuccessActivity"
            android:configChanges="locale" />

        <service
            android:name=".net.NetworkService"
            android:exported="false" />
        <provider
            android:name=".db.AppContentProvider"
            android:authorities="${applicationId}"
            android:exported="false" />
        <!-- Used for install referral measurement -->
        <service android:name="com.google.analytics.tracking.android.CampaignTrackingService" />
        <receiver
            android:name="com.google.analytics.tracking.android.CampaignTrackingReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
        <!-- GCM -->
        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="${applicationId}" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".net.GlobalReceiver"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data
                    android:path="${applicationId}"
                    android:scheme="package" />
            </intent-filter>
        </receiver>

        <service android:name=".GCMIntentService" />
        <service
            android:name=".net.TaskReminderService"
            android:exported="true" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="${googleApiKey}" />

        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="${baiduApiKey}" />
        <!-- Upload file services -->
        <service
            android:name=".net.UploadFileService"
            android:exported="false" />
        <service
            android:name=".net.UploadFileNetworkService"
            android:exported="false" />

        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" />

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="f152c4fd189e2f82c7a154e39585c2694e2b30fc" />
    </application>
</manifest>
